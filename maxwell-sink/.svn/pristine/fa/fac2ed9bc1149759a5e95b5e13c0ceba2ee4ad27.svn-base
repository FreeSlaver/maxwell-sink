<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
	debug="false">
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%-5p] [%d{MM-dd HH:mm:ss SSS}] [%l]-%X- %m%n" />
		</layout>
	</appender>

	<appender name="rootlog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/logs/maxwell-sink/root.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd'.log'" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-d{yyyy-MM-dd HH\:mm\:ss SSS} [%c]-[%p] %m%n" />
		</layout>
	</appender>

	<appender name="datalog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/logs/maxwell-sink/data.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd'.log'" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%m%n" />
		</layout>
	</appender>


	<category name="org.eclipse.jetty" additivity="false">
		<priority value="WARN" />
		<appender-ref ref="rootlog" />
	</category>
	<category name="org.springmodules" additivity="false">
		<priority value="WARN" />
		<appender-ref ref="rootlog" />
	</category>
	<category name="net.sf.ehcache" additivity="false">
		<priority value="WARN" />
		<appender-ref ref="rootlog" />
	</category>
	<category name="org.apache" additivity="false">
		<priority value="WARN" />
		<appender-ref ref="rootlog" />
	</category>

	<logger name="rootlog" additivity="false">
		<level value ="info"/>
		<appender-ref ref="rootlog" />
	</logger>

	<logger name="datalog" additivity="false">
		<level value ="info"/>
		<appender-ref ref="datalog" />
	</logger>

	<root>
		<appender-ref ref="DEBUG" />
		<appender-ref ref="console" />
		<appender-ref ref="rootlog" />
	</root>
</log4j:configuration> 